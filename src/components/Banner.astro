<div class="relative w-full h-[400px] overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black opacity-60 z-10"></div>
  <div class="absolute inset-0 flex overflow-x-auto scrollbar-hide">
    <div class="flex min-w-full animate-scroll">
      <img 
        src="http://oasisreunion.live/wp-content/uploads/2024/11/Capture-1.jpg" 
        alt="Oasis at Knebworth"
        class="h-[400px] w-auto object-cover"
      />
      <img 
        src="https://upload.wikimedia.org/wikipedia/commons/e/e0/Glastonbury_Festival_Pyramid_Stage.jpg" 
        alt="Oasis at Glastonbury"
        class="h-[400px] w-auto object-cover"
      />
      <img 
        src="https://upload.wikimedia.org/wikipedia/commons/7/7a/Slane_Castle_Concert.jpg" 
        alt="Oasis at Slane Castle"
        class="h-[400px] w-auto object-cover"
      />
    </div>
  </div>
  <div class="absolute inset-0 flex items-center justify-center z-20">
    <h1 class="text-6xl font-bold text-white text-center drop-shadow-lg">
      OASIS
    </h1>
  </div>
</div>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% + 100vw));
    }
  }
  
  .animate-scroll {
    animation: scroll 30s linear infinite;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
